@model TreinamentoWeb.Models.Aluno

<div class="col-md-24">
    <form>
        <div class="col-md-24">
            <div class="col-md-8">
                @Html.Label("Nome")
                @Html.TextBoxFor(x => x.Nome, null, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="col-md-4 col-md-offset-1">
                @Html.Label("Matricula")
                @Html.TextBoxFor(x => x.Matricula, null, new { @class = "form-control", disabled = "disabled" })
            </div>

            <div class="col-md-4 col-md-offset-1">
                @Html.Label("Situação")
                @Html.EnumDropDownListFor(x => x.SituacaoAluno, null, new { @class = "form-control", disabled = "disabled" })
            </div>

            <div class="col-md-5 col-md-offset-1">
                @Html.Label("CPF")
                @Html.TextBoxFor(x => x.Cpf, null, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>

        <div class="col-md-24">
            <div class="col-md-8">
                @Html.Label("Nome Mãe")
                @Html.TextBoxFor(x => x.NomeMae, null, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="col-md-9 col-md-offset-1">
                @Html.Label("Curso")
                @Html.EnumDropDownListFor(x => x.CursoAluno, null, new { @class = "form-control", disabled = "disabled" })
            </div>

            <div class="col-md-5 col-md-offset-1">
                @Html.Label("Data Nascimento")
                @Html.TextBoxFor(x => x.DataNascimento, null, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>

        <div class="col-md-24">
            @Html.Label("Observações")
            @Html.TextAreaFor(x => x.Observacoes, new { @class = "form-control", disabled = "disabled"})
        </div>
    </form>
</div>

